<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="255.0" prefWidth="232.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.DishController">

    <headerText>Fill in the information for the new dish</headerText>
    <content>
        <VBox prefHeight="231.0" prefWidth="232.0">
            <children>
                <Label text="DIsh Name"/>
                <TextField fx:id="dishNameField" promptText="Dish name"/>
                <Label text="Ingredients"/>
                <TextArea fx:id="ingredientsField" prefHeight="200.0" prefWidth="210.0"
                          promptText="Type ingredients followed by a comma"/>
            </children>
        </VBox>
    </content>

</DialogPane>
